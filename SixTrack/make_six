#  then
#    make clean
#    cd crlibm
#    make clean
#    cd ..
#    echo ""
#  fi
echo "The $ename directory can now be taken to Windows/MacOS or BOINC server."
echo "but you may want to 'cd $ename;make clean;cd crlibm; make clean; cd ../..'"
#fi
